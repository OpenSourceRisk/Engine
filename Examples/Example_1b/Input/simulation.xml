<?xml version="1.0"?>
<Simulation>
  <!--
	This section determines the scenario generation
	given the model defined below.
    -->
    
    <Parameters>

      <Grid>81,3M</Grid>
      <!--<Grid>242,1M</Grid>-->
      <Calendar>EUR,USD</Calendar>
      <Sequence>SobolBrownianBridge</Sequence>
      <Scenario>Simple</Scenario>
      <Seed>42</Seed>
      <Samples>1000</Samples>
      <Ordering>Steps</Ordering>
      <DirectionIntegers>JoeKuoD7</DirectionIntegers>
      
    </Parameters>

    <!--
	This section determines the simulation model composition
	and the calibration of all components.
    -->
  <CrossAssetModel>
    <DomesticCcy>EUR</DomesticCcy>
    <Currencies>
      <Currency>EUR</Currency>
      <!-- <Currency>USD</Currency> -->
      <!-- <Currency>GBP</Currency> -->
      <!-- <Currency>CHF</Currency> -->
      <!-- <Currency>JPY</Currency> -->
    </Currencies>
    <BootstrapTolerance>0.0001</BootstrapTolerance>
    <Discretization>Euler</Discretization>
    <Measure>BA</Measure>
    <InterestRateModels>
      <HWModel ccy="default">
        <CalibrationType>None</CalibrationType>
        <Volatility>
          <Calibrate>N</Calibrate>
          <ParamType>Constant</ParamType>
          <TimeGrid/>
          <InitialValue>
            <!-- <Sigma> -->
            <!--   <Row>0.46031,0.459198,0,0</Row> -->
            <!--   <Row>0,0,-0.398353,0.400474</Row> -->
            <!-- </Sigma> -->
            <Sigma>
              <Row>0.01</Row>
            </Sigma>
          </InitialValue>
        </Volatility>
        <Reversion>
          <Calibrate>N</Calibrate>
          <ParamType>Constant</ParamType>
          <TimeGrid/>
          <InitialValue>
            <Kappa>
              0.01
            </Kappa>
            <!-- <Kappa> -->
            <!--   0.0867495,0.0812171,0.0243276,0.0250822 -->
            <!-- </Kappa> -->
          </InitialValue>
        </Reversion>
      </HWModel>
